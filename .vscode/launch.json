    "version": "0.2.0",
    "configurations": [
        {
            "name": "esno",
            "type": "node",
            "request": "launch",
            "args": ["./node_modules/esno/esno.js", "${file}"],
            "skipFiles": ["<node_internals>/**"],
            "internalConsoleOptions": "openOnSessionStart"
        },

        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/${file}"
        }
    ]
}
